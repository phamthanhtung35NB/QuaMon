<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/soLs">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_marginTop="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/a1"
            android:layout_width="340dp"
            android:layout_height="520dp"
            android:background="@drawable/thanhchi"
            android:gravity="center|top|left"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonXoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xóa" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:layout_marginStart="85dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Thí chủ: "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textFrom"
                    android:layout_width="162dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Nguyễn Văn Anh"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a3"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Tới từ: "
                    android:textSize="15dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageLogo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/uet"
                    android:scaleType="centerCrop"
                    android:scaleX="1.6"
                    android:scaleY="1.6" />

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:text=" Dâng hương xin: "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textContent"
                    android:layout_width="162dp"
                    android:layout_height="126dp"
                    android:gravity="center"
                    android:text="Qua môn đại số"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:text="Vào hồi: "
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00 00/00/0000"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>